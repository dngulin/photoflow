export component EveryFrameTimer {
    width: 0px;
    height: 0px;

    private property <duration> time-now: animation-tick();
    private property <duration> time-pre;

    init => {
        time-pre = time-now;
    }

    callback triggered(dt: duration);

    changed time-now => {
        triggered(time-now - time-pre);
        time-pre = time-now;
    }
}
